<?xml version="1.0"?>
<project name="zmBrowserPerfClient" default="deploy" basedir=".">

   <property environment="env"/>
   <property name="src.dir" value="src"/>
   <property name="webapp.dir" value="${env.TOMCAT_HOME}/webapps/zmBrowserPerfClient"/>
 
   <target name="clean" description="Erases contents of webapp dir">
      <delete dir="${webapp.dir}"/>
   </target>

   <target name="deploy" depends="clean"
      description="Copies the contents of web-app to destination dir">
      <copy todir="${webapp.dir}">
         <fileset dir="${src.dir}"/>
      </copy> 
   </target>

</project>